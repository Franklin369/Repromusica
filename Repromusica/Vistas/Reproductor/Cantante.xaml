<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Repromusica.Vistas.Reproductor.Cantante">
    <StackLayout >
        <Label Text="{Binding ParametrosRecibe.Nombre,Mode=TwoWay}"
               FontAttributes="Bold"
               TextColor="White"
               HorizontalOptions="Center"
               FontSize="30"
               Margin="20,0" />
        <Label Text="{Binding ParametrosRecibe.Autor,Mode=TwoWay}"
               TextColor="LightGray"
               HorizontalOptions="Center"
               FontAttributes="Bold" />
    </StackLayout>
</ContentView>